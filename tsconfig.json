{
	"compileOnSave": true,
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2022",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "build",
		"sourceMap": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule":true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./src/**/*.test.ts"
	]
}
